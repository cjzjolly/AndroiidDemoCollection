<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/pdf_pad_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    背景图始终在底层-->

        <FrameLayout
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/app_color_divider" />

        </FrameLayout>




        <!--        开始、插入、查看左右两侧的按钮-->
        <FrameLayout
            android:id="@+id/leftRightViewParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/leftTopView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟的左侧按钮"
                android:background="@color/app_color_green"
                />

            <TextView
                android:id="@+id/rightTopView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟的右侧侧按钮"
                android:layout_gravity="right"
                android:background="@color/app_color_green"
                />

        </FrameLayout>





        <!-- 开始、插入、查看的按钮-->
        <FrameLayout
            android:id="@+id/centerTopView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟的中间按钮 A B C D"
                android:background="@color/app_color_green"
                />
        </FrameLayout>





        <!-- 二级菜单 -->
        <FrameLayout
            android:id="@+id/subMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模拟的二级菜单 A B C D"
                android:background="@color/app_color_green"
                />
        </FrameLayout>





        <!--    标题栏要始终在顶层-->
        <FrameLayout
            android:id="@+id/tv_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="标题栏很蓝的啦" />
        </FrameLayout>


    </FrameLayout>

    <Button
        android:id="@+id/btn_test"
        android:text="test压缩layout宽度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        />

    <Button
        android:id="@+id/btn_test2"
        android:text="test增加layout宽度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="50dp"
        />

</FrameLayout>