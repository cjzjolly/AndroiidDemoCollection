<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_shape_1">

    <ImageView
        android:id="@+id/iv_selector_pic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/tree"/>

    <CheckBox
        android:id="@+id/cb_set_selected"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignEnd="@id/iv_selector_pic_content"
        android:button="@null"
        android:drawableStart="@drawable/bg_checkbox_shape"/>

    <TextView
        android:id="@+id/tv_selector_pic_index"
        android:text="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/iv_selector_pic_content"
        android:layout_alignBottom="@+id/iv_selector_pic_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:background="#FF4040FF"/>
</RelativeLayout>